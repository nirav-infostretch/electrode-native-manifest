{
  "android": {
    "root": "",
    "moduleName": "android",
    "dependencies": [
      "org.jetbrains.kotlin:kotlin-stdlib:1.5.0"
    ],
    "copy": [
      {
        "source": "../../webview/*",
        "dest": "android/src/main/java"
      }
    ]
  },
  "ios": {
    "copy": [
      {
        "dest": "{{{projectName}}}/Libraries/RNCWebView",
        "source": "ios/**"
      }
    ],
    "pbxproj": {
      "addHeaderSearchPath": [
        "\"$(SRCROOT)/{{{projectName}}}/Libraries/RNCWebView/**\""
      ],
      "addProject": [
        {
          "group": "Libraries",
          "path": "RNCWebView/RNCWebView.xcodeproj",
          "staticLibs": [
            {
              "name": "libRNCWebView.a",
              "target": "RNCWebView"
            }
          ]
        }
      ]
    }
  }
}